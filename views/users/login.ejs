<% layout('layouts/boilerplate') %>
<div class="card shadow mx-auto col-lg-4 col-md-6">
  <img
    crossorigin="anonymous"
    src="/img/homeBG.jpg"
    alt=""
    class="card-img-top"
  />
  <div class="card-body">
    <h1 class="card-title">Login</h1>
    <form action="/login" method="POST" class="validated-form" novalidate>
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div><button class="mui-btn mx-auto mui-btn--raised" id="submit">Login</button></div>
    </form>
  </div>
</div>
